<?php

use Krystal\Widget\GridView\GridViewWidget;
use Krystal\Form\Element;
use Cms\View\Icon;

defined('KRYSTAL') or die;

?>

<div class="btn-toolbar">
	<div class="btn-group">
	  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
		<i class="glyphicon glyphicon-list"></i> <?php $this->show('Menu'); ?> <span class="caret"></span>
	  </button>
	  <ul class="dropdown-menu">
        
		 <?php if (!empty($themes)): ?>
		 <li><a href="#" data-button="save-changes" data-url="<?php echo $this->url('Cms:Admin:Themes@tweakAction'); ?>"><i class="glyphicon glyphicon-floppy-save"></i> <?php $this->show('Save changes');?></a></li>
		 <li><a href="#" data-button="remove-selected" data-url="<?php echo $this->url('Cms:Admin:Themes@deleteManyAction'); ?>"><i class="glyphicon glyphicon-remove"></i> <?php $this->show('Remove selected'); ?></a></li>
		 <?php else: ?>
		 <li class="disabled"><a><i class="glyphicon glyphicon-floppy-save"></i> <?php $this->show('Save changes');?></a></li>
		 <li class="disabled"><a><i class="glyphicon glyphicon-remove"></i> <?php $this->show('Remove selected'); ?></a></li>
		 <?php endif; ?>
		 
	  </ul>
	</div>
</div>

<h2 class="page-header"><i class="glyphicon glyphicon-th-list"></i> <?php $this->show('Themes'); ?> <span class="text-muted">(<?php echo count($themes); ?>)</span></h2>

<form>
    <div class="table-responsive">
        <?= $this->widget(new GridViewWidget($themes, array(
            'batch' => true,
            'pk' => 'theme',
            'tableClass' => 'table table-hover table-bordered table-striped table-condensed',
            'columns' => array(
                array(
                    'column' => 'cover',
                    'value' => function($theme){
                        return Element::image($theme['cover'], array('class' => 'img-responsive'));
                    }
                ),

                array(
                    'column' => 'current',
                    'value' => function($theme) use ($current){
                        return Element::radio('current', $theme['theme'], $current == $theme['theme']);
                    }
                ),

                array(
                    'column' => 'name'
                ),

                array(
                    'column' => 'version'
                ),

                array(
                    'column' => 'description'
                ),

                array(
                    'column' => 'author'
                )
            ),

            'actions' => array(
                'remove' => function($theme) use ($current){
                    // Don't let to remove current theme
                    if ($theme['theme'] !== $current) {
                        return Icon::remove(
                            $this->url('Cms:Admin:Themes@deleteAction', $theme['theme']),
                            $this->translate('Remove this theme')
                        );
                    } else {
                        return null;
                    }
                }
            )
        ))); ?>

        <?php if (empty($themes)): ?>
        <div class="center-block">
            <h2 class="text-center text-muted"><i class="glyphicon glyphicon-remove"></i> <?php $this->show('No themes'); ?></h2>
        </div>
        <?php endif; ?>
    </div>
</form>
