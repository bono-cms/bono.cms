<?php

use Krystal\Form\Widget\CheckBoxWidget;
use Krystal\Form\HtmlHelper;

?>

<form>
	<div class="well clearfix">
		
		<input type="hidden" name="id" value="<?php echo $language->getId(); ?>" />
		
		<div class="form-group clearfix">
			<label class="col-lg-2 control-label"><?php $this->show('Name'); ?></label>
			<div class="col-lg-10">
				<div class="input-group">
					<input type="text" name="name" class="form-control" value="<?php echo $language->getName(); ?>" placeholder="<?php $this->show('The name of the language to be created'); ?>" />
					<span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
				</div>
			</div>
		</div>
		
		<div class="form-group clearfix">
			<label class="col-lg-2 control-label"><?php $this->show('Code'); ?></label>
			<div class="col-lg-10">
				<div class="input-group">
					<input type="text" name="code" class="form-control" value="<?php echo $language->getCode(); ?>" placeholder="<?php $this->show('Unique language identifier'); ?>" />
					<span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
				</div>
			</div>
		</div>
		
		<div class="form-group clearfix">
			<label class="col-lg-2 control-label"><?php $this->show('Country'); ?></label>
			<div class="col-lg-10">
				<div class="input-group">
					<select name="flag" class="form-control">
						
						<?php foreach ($countries as $code => $name): ?>
						<option data-flag="<?php printf('famfamfam-flag-%s', $code); ?>" <?php HtmlHelper::selectOnDemand($code == $language->getCode()); ?> value="<?php echo $code; ?>"><?php echo $name; ?></option>
						<?php endforeach; ?>
						
					</select>
					
					<span class="input-group-addon"><i data-container="flag" class="glyphicon glyphicon-pencil"></i></span>
				</div>
			</div>
		</div>
		
		<div class="form-group clearfix">
			<label class="col-lg-2 control-label"><?php $this->show('Order'); ?></label>
			<div class="col-lg-10">
				<div class="input-group">
					<input type="number" min="0" name="order" class="form-control" value="<?php echo $language->getOrder(); ?>" placeholder="<?php $this->show('Language sort order in a list'); ?>" />
					<span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
				</div>
			</div>
		</div>
		
		<div class="form-group clearfix">
			<label class="col-lg-2 control-label"><?php $this->show('Published'); ?></label>
			<div class="col-lg-10">
				
				<?php echo CheckBoxWidget::render(array(

					'name' => 'published', 
					'class' => 'form-control'

				), $language->getPublished()); ?>
				
			</div>
		</div>
		
		<?php if (!$language->getId()): ?>
		
		<div class="form-group clearfix">
			<label class="col-lg-2 control-label"><?php $this->show('Make default'); ?></label>
			<div class="col-lg-10">

				<?php echo CheckBoxWidget::render(array(

					'name' => 'default', 
					'class' => 'form-control'

				), $language->getDefault()); ?>

			</div>
		</div>
		
		<?php endif; ?>
		
	</div>
	
	
	<?php if (!$language->getId()): ?>
	<button data-button="add" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i> <?php $this->show('Add'); ?></button>
	
	<?php else: ?>
	<button data-button="save" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i> <?php $this->show('Save'); ?></button>
	
	<?php endif; ?>
	<button data-button="cancel" class="btn btn-default"><i class="glyphicon glyphicon-floppy-remove"></i> <?php $this->show('Cancel'); ?></button>
	
</form>
